<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
              <a class="navbar-brand" href="/">
                <span>Bookers</span>
              </a>
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
               <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNavDropdown" style>
              <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
              <li>
                <%= link_to "log", destroy_user_session_path, method: :delete %>
              </li>
              <% else %>
              <li>
              <%= link_to "Home" ,"/" ,class:"fas fa-home nav-link text-light"%>
              </li>

              <li>
              <%= link_to "About",home_about_path,class:"fas fa-link nav-link text-light" %>
              </li>

              <li>
              <%= link_to "Sing up", new_user_registration_path,class:"fas fa-user-plus nav-ink text-light" %>
              </li>
              <li>
              <%= link_to "Log in", new_user_session_path, class:"fas fa-sign-in-alt nav-link text-light" %>
              </li>
              <% end %>
             </ul>
             </div>
            </div>
        </nav>
    </header>
      <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>Copyright infratop.inc</p>
          </div>
        </div>
      </div>

    </footer>
    <%= yield %>
  </body>
</html>
